package laurah;

import javax.swing.*;
import javax.swing.border.Border;

import java.awt.event.*;
import java.awt.*;
import java.sql.*;

public class ViewListFrame extends JInternalFrame implements ActionListener
{
	private Connection conn;	// connection to DB
	private String listName;
	
	// components
	JLabel idLabel;
	JTextField idTextField;
	JPanel idPanel;
	
	ViewListColumn one;
	ViewListColumn two;
	ViewListColumn three;
	ViewListColumn four;
	ViewListColumn five;
	
	JButton addChangeButton;
	JButton clearDeleteButton;
	JButton clearSelectionButton;
	JButton deleteListButton;
	
	JTable listTable;
	ListTableModel tableModel;
	
	public ViewListFrame(Connection c, String n, JDesktopPane d)
	{
		super(n, false, true); // only close option enabled
		
		conn = c;
		listName = n;
		
		// create GUI
		this.setSize(d.getSize());
	}
	
	public void actionPerformed(ActionEvent e) 
	{
		
	}

}

package laurah;

import javax.swing.JInternalFrame;
import java.awt.event.*;
import java.awt.*;
import java.sql.*;

public class NewListFrame extends JInternalFrame implements ActionListener
{
	public static final int HEIGHT = 500;
	public static final int WIDTH = 700;
	private static final int OFFSET1 = 5;	// text box offset
	private static final int OFFSET2 = 200;	// drop-down offset
	private static final int OFFSET3 = 400;	// size text box offset
	private static final int HEIGHT_OFFSET = 10;	// vertical distance between sets
	
	private Connection conn;	// connection to DB
	
	public NewListFrame(Connection c)
	{
		super("Create New List", false, true); // only close option enabled
		conn = c;
		
		// create GUI
		
		
		this.setSize(WIDTH, HEIGHT);
	}

	public void actionPerformed(ActionEvent e) 
	{
		// respond to various events in the frame
		
	}
}
